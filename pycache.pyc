import platform as plat
import subprocess as subpr

print(plat.system() + " " + plat.release() + " " + plat.version()) # System name, release, and version number
subpr.call(["git", "--version"]) # Manually calls git and gives version. Fails if git isn't installed.

py_version = plat.python_version() # Gets the current version of Python

# States whether or not the correct version of Python is used, which should be 3.7.1
if(py_version != "3.7.1"):
    print("Warning! Incorrect version of Python! Expected: 3.7.1 Given: " + py_version)
else:
    print("Python Version: 3.7.1")
